<%
price = params[:price] ?  params[:price].split("-") : [1,100000]
bedrooms = params[:bedrooms] ?  params[:bedrooms].split("-") : [1,10]
sqrft = params[:square_footage] ? params[:square_footage].split("-") : [1,100000]
%>
<div class='well'>
<form action='/listings' method='get'>
<ul>
	<li>
		<%= render 'listings/shared/range_select', field: 'price', values: raw(price), min: 1, max: 100000000, range: true, price: true %>
	</li>
	<li>
		<%= render 'listings/shared/range_select', field: 'bedrooms', values: raw(bedrooms), range: true, price: false, min: 1, max: 10 %>
	</li>
	<li>
		<%= render 'listings/shared/range_select', field: 'square_footage', values: raw(sqrft), value: "100 - 10000", min: 1, max: 10000, range: true, price: false, min: 100, max: 8000 %>
	</li>
</ul>
<input type='hidden' name='filter' value='true' />
<input type='submit' value='Update' class='btn btn-primary' />
</form>
</div>