<%= simple_form_for([:listings,:rentals,@listing]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.text_area :description %>
    <%= f.input :category_id %>
    <%= f.input :price %>
    <%= f.input :spam %>
    <%= f.input :source %>
    <%= f.input :url %>
    <%= f.input :featured %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :country %>
    <%= f.input :zipcode %>
    <%= f.input :phone %>
    <%= f.input :email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
